{
  "name": "elysia-frontend",
  "version": "0.3.0",
  "private": true,
  "description": "Elysia AI Platform Frontend - Custom build exporting to static_custom",
  "scripts": {
    "dev": "next dev",
    "build": "next build && npm run export",
    "export": "npm run copy-static",
    "copy-static": "rm -rf ../elysia/api/static_custom/_next && cp -r out/* ../elysia/api/static_custom/",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "next": "^15.1.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "eslint-config-next": "^15.1.3",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
